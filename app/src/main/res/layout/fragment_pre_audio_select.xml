<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.selflearningcoursecreationapp.utils.customViews.LMSConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.create_course.video_as_lecture.PreVideoSelectFragment">


        <com.selflearningcoursecreationapp.utils.customViews.LMSMaterialButton
            android:id="@+id/btn_record_audio"
            spanText="@{@string/record_audio}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="@dimen/_4ssp"
            android:text="@string/record_audio"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/btn_take_from_file"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent=".9"
            app:textAllCaps="true" />

        <com.selflearningcoursecreationapp.utils.customViews.LMSMaterialButton
            android:id="@+id/btn_take_from_file"
            spanText="@{@string/take_from_file_manager}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="@dimen/_4ssp"
            android:text="@string/take_from_file_manager"
            android:textAllCaps="true"
            android:textSize="@dimen/_12ssp"
            app:backgroundTint="@null"
            app:btnTextColor="heading"
            app:buttonBackground="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_record_audio"

            app:layout_constraintWidth_percent=".9"
            app:textAllCaps="true" />


    </com.selflearningcoursecreationapp.utils.customViews.LMSConstraintLayout>
</layout>