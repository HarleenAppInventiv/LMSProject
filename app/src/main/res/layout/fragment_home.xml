<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="homefrag"
            type="com.selflearningcoursecreationapp.utils.HandleClick" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/offwhiteTextColor">

        <com.selflearningcoursecreationapp.utils.customViews.LMSImageView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:importantForAccessibility="no"
            app:changeBackgroundType="background"
            app:layout_constraintBottom_toTopOf="@+id/tl_course_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_user"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:contentDescription="@string/user_image"
            android:onClickListener="@{(v)->homefrag.onHandleClick(v)}"
            android:padding="@dimen/_2sdp"
            android:scaleType="fitXY"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circle"
            app:srcCompat="@drawable/ic_course_dummy" />

        <com.selflearningcoursecreationapp.utils.customViews.LMSTextView
            android:id="@+id/tv_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Hey!"
            android:textColor="?attr/whiteTextColor"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_name"
            app:layout_constraintStart_toEndOf="@+id/iv_user"
            app:layout_constraintTop_toTopOf="@+id/iv_user"
            app:textColorType="none" />

        <com.selflearningcoursecreationapp.utils.customViews.LMSTextView
            android:id="@+id/tv_user_name"
            style="@style/textViewStyle.Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:onClickListener="@{(v)->homefrag.onHandleClick(v)}"
            android:text="Alisi Nikolson"
            android:textColor="?attr/whiteTextColor"
            app:fontType="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user"
            app:layout_constraintStart_toEndOf="@+id/iv_user"
            app:layout_constraintTop_toBottomOf="@+id/tv_hi"
            app:textColorType="none" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:contentDescription="@string/notification"
            android:src="@drawable/ic_notification_home"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_user" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_talkback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:contentDescription="@string/enable_disable_screen_reading_mode"
            android:src="@drawable/ic_screen_reading_mode_white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user"
            app:layout_constraintEnd_toStartOf="@+id/iv_notification"
            app:layout_constraintTop_toTopOf="@id/iv_user" />

        <com.selflearningcoursecreationapp.utils.customViews.LMSEditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/search_bg"
            android:drawableStart="@drawable/ic_home_search"
            android:drawableEnd="@drawable/ic_mic_home"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="@string/search_courses"
            android:textColorHint="@color/search_hint_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
            app:primaryIconTint="none"
            app:textBgColor="tint" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_course_type"
            style="@style/tab_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="?attr/offwhiteTextColor"
            android:elevation="@dimen/_4sdp"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search"
            app:tabIndicatorColor="?attr/googleButtonBackgroundColor"
            app:tabIndicatorFullWidth="false"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="?attr/primaryTextColor"
            app:tabTextAppearance="@style/tab_text"
            app:tabTextColor="?attr/hintColor" />

        <include
            android:id="@+id/content_home"
            layout="@layout/content_home_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_course_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>