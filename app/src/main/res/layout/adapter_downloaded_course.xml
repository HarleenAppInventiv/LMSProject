<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="DuplicateIncludedIds">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_ongoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:cardBackgroundColor="?attr/viewBackgroundColor"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">


            <com.selflearningcoursecreationapp.utils.customViews.LMSTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:ellipsize="end"
                android:lineSpacingExtra="0dp"
                android:maxLines="1"
                android:textSize="@dimen/textField_16"
                app:fontType="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.selflearningcoursecreationapp.utils.customViews.LMSTextView
                    android:id="@+id/category_type_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="133dp"
                    android:maxLines="1"
                    android:textSize="@dimen/adapterTextField_11"
                    app:fontType="medium"
                    app:textColorType="heading" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_dot"
                    android:layout_width="@dimen/_4sdp"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="?attr/dotColor"
                    app:shapeAppearanceOverlay="@style/circleImage" />

                <com.selflearningcoursecreationapp.utils.customViews.LMSTextView
                    android:id="@+id/created_by_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="133dp"
                    android:maxLines="1"
                    android:textSize="@dimen/adapterTextField_11"
                    app:fontType="medium"
                    app:textColorType="heading" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/grey_ededed"
                android:visibility="gone" />


            <com.selflearningcoursecreationapp.utils.customViews.LMSTextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/adapterTextField_12"
                android:visibility="gone"
                app:fontType="medium" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>