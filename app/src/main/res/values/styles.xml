<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogTransparent" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="windowMinWidthMinor">80%</item>
        <item name="windowMinWidthMajor">80%</item>

        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/hintColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_5sdp</item>
        <item name="fontFamily">?attr/fontRegular</item>
        <item name="android:fontFamily">?attr/fontRegular</item>

    </style>


    <style name="textViewStyle.Heading" parent="textViewStyle">
        <item name="android:textColor">?attr/headingTextColor</item>
        <item name="android:textColorHint">?attr/hintColor</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontFamily">?attr/fontBold</item>
        <item name="android:fontFamily">?attr/fontBold</item>


    </style>

    <style name="textViewStyle.Medium" parent="textViewStyle">
        <item name="android:textColor">?attr/headingTextColor</item>
        <item name="android:textColorHint">?attr/hintColor</item>
        <item name="fontFamily">?attr/fontMedium</item>
        <item name="android:fontFamily">?attr/fontMedium</item>

    </style>

    <style name="textViewStyle.SemiBold" parent="textViewStyle">
        <item name="android:textColor">?attr/headingTextColor</item>
        <item name="android:textColorHint">?attr/hintColor</item>
        <item name="fontFamily">?attr/fontSemiBold</item>
        <item name="android:fontFamily">?attr/fontSemiBold</item>

    </style>

    <style name="SWTheme" parent="Widget.Material3.CompoundButton.Switch">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSecondary">@color/priceColor</item>
        <item name="colorPrimary">@color/priceColor</item>
        <item name="trackColor">#85929292</item>
        <item name="trackTint">#85929292</item>
    </style>

    <style name="toolbarTheme" parent="textViewStyle">
        <item name="fontFamily">?attr/fontSemiBold</item>
        <item name="android:fontFamily">?attr/fontSemiBold</item>
        <item name="android:textColor">?attr/toolbarTitleColor</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="toolbarSubTitleTheme" parent="textViewStyle">
        <item name="fontFamily">?attr/fontRegular</item>
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textColor">?attr/toolbarTitleColor</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="editTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/hintColor</item>
        <item name="fontFamily">?attr/fontRegular</item>
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="buttonViewStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="rippleColor">?attr/buttonBackgroundTintColor</item>
        <item name="fontFamily">?attr/fontMedium</item>
        <item name="android:fontFamily">?attr/fontMedium</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">true</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
    </style>

    <style name="circleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="corneredImage5">
        <item name="cornerSize">5%</item>
    </style>

    <style name="MyTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>

    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/hintColor</item>
        <item name="fontFamily">?attr/fontRegular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CheckboxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="fontFamily">?attr/fontRegular</item>
    </style>

    <style name="RadioButtonTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="fontFamily">?attr/fontRegular</item>
        <item name="colorAccent">?attr/colorPrimary</item>

    </style>

    <style name="Theme.SelfLearningCourseCreationApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SelfLearningCourseCreationApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">?attr/fontSemiBold</item>
    </style>

    <style name="MyBottomSheetStyle" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="MaterialDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/google_btn_bg_color_fc6d5b</item>
        <item name="colorPrimary">@color/white</item>
        <item name="titleTextColor">@color/text_color_black_131414</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/text_color_black_131414
        </item>
    </style>

</resources>